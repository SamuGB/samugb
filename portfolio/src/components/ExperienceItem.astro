---
interface Props {
  title: string
  description: string
  link?: {
    title: string
    url: string
    icon: string
  }
  date: string
  links?: Array<typeof link>
}

const { title, description, link, date, links } = Astro.props
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-800 dark:text-sky-200/80">{date}</time
>
<h3 class="text-lg font-semibold text-yellow-800 dark:text-yellow-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal  dark:text-gray-200 text-pretty">
  {description}
</p>
{
  links && links.map((link) => (
    link && (<a
        href={link.url}
        target="_blank"
        class="bg-white/5 
      border dark:border-white/10 border-gray-300
      rounded-full
      inline-flex justify-center items-center gap-x-2
      py-1 px-2 md:py-2 md:px-4
      text-xs md:text-base
      transition
      hover:scale-110 hover:bg-white/10 mr-4"
      >
      <img src={link.icon} alt="icon" class="size-4">
        {link.title}
      </a>
      )
    )
  )
}
